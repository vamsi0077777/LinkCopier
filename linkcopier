    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(function() {
                alert("Copied to clipboard!");
            }, function(err) {
                console.error("Could not copy: ", err);
                alert("Copy failed. Try manually selecting and copying the link.");
            });
        }
    </script>
